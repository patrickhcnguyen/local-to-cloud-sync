{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "main.ts",
    "preload.ts",
    "renderer/**/*.ts",
    "engine/**/*.ts",
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
